{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "eclipse:asteroid",
      "is_spawnable": false,
      "is_summonable": true,
      "is_experimental": false
    },

    "component_groups": {
      "please:despawn": {
        "minecraft:instant_despawn": {
          "remove_child_entities": false
        }
      },
      "asteroid:explode": {
        "minecraft:scale_by_age": {
          "end_scale": 20,
          "start_scale": 2
        },
        "minecraft:ageable": {
          "duration": 5,
          "drop_items": "minecraft:gunpowder"
        },
        "minecraft:timer": {
          "time": 4,
          "looping": false,
          "time_down_event": {
            "event": "asteroid:despawn",
            "target": "self"
          }
        }
      }
    },
    "components": {
      "minecraft:damage_sensor": {
        "triggers": [
          {
            "cause": "all",
            "deals_damage": false
          }
        ]
      },
      "minecraft:physics": {
        "has_collision": true,
        "has_gravity": true
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": false
      },
      "minecraft:scale_by_age": {
        "end_scale": 4,
        "start_scale": 0.01
      },
      "minecraft:ageable": {
        "duration": 4
      },
      "minecraft:timer": {
        "time": 3,
        "looping": false,
        "time_down_event": {
          "event": "asteroid:camera_shake",
          "target": "self"
        }
      },
      "minecraft:conditional_bandwidth_optimization": {
        "default_values": {
          "max_optimized_distance": 1000,
          "max_dropped_ticks": 20,
          "use_motion_prediction_hints": true
        }
      },
      // set health to infinite so it cant be /kill ed
      "minecraft:health": {
        "value": 32767,
        "max": 32767
      },
      // this helps expose scale component to script api
      "minecraft:scale": {
        "value": 1.0
      },
      "minecraft:custom_hit_test": {
        "hitboxes": [
          {
            "width": 0,
            "height": 0,
            "pivot": [
              0,
              -2000,
              0
            ]
          }
        ]
      }
    },
    "events": {
      "asteroid:despawn": {
        "add": {
          "component_groups": [
            "please:despawn"
          ]
        }
      },
      "asteroid:camera_shake": {
        "add": {
          "component_groups": [
            "asteroid:explode"
          ]
        }
      }
    }
  }
}
