        "sequence": [
          {
            "condition": "query.block_property('lunar:rotation') == 2 && query.block_neighbor_has_any_tag(-1,0,0,'solar_panel')",
            "set_block_property": {
              "lunar:right": 1
            }
          },
          {
            "condition": "query.block_property('lunar:rotation') == 2 && !query.block_neighbor_has_any_tag(-1,0,0,'solar_panel')",
            "set_block_property": {
              "lunar:right": 0
            }
