      "menu_category": {
        "category": "items",
        "is_hidden_in_commands": false
      },
      "properties": {
        "lunar:rotation": [ 2, 3, 4, 5 ],
        "lunar:right": [ 0, 1 ],
        "lunar:left": [ 0, 1 ]
      }
    },
    "components": {
      "tag:solar_panel": {},
      "minecraft:geometry": "geometry.solar_panel",
      "minecraft:on_player_placing": {
        "event": "lunar:place"
