        "condition": "query.block_property('lunar:rotation') == 3",
        "components": {
          "minecraft:rotation": [ 0, 180, 0 ]
        }
      },
      {
        "condition": "query.block_property('lunar:rotation') == 4",
        "components": {
          "minecraft:rotation": [ 0, 90, 0 ]
        }
      },
      {
